<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/game_full_display_overallAreaScroller" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:scrollbars="vertical">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    


			<TextView
			    	android:id="@+id/game_full_display_name"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	android:paddingLeft="4dp"
			    	android:paddingRight="10dp"
			    	android:text="Game Name"
			    	android:textSize="16sp"
			    />

<TextView
    	android:id="@+id/game_full_display_year_published"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:text="Game Owned"
    	android:textSize="16sp"
   />

   <ImageView android:id="@+id/game_full_display_image"
        android:layout_margin="10dp"
    	android:layout_width="300dp"
    	android:layout_height="300dp"
    	android:scaleType="fitXY"
        />


<TextView
    	android:id="@+id/game_full_display_rank"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />
<TextView
    	android:id="@+id/game_full_display_rating"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />
<TextView
    	android:id="@+id/game_full_display_players"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />
<TextView
    	android:id="@+id/game_full_display_playingtime"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />

<TextView
    	android:id="@+id/game_full_display_users_rating"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />
<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>

<ScrollView android:id="@+id/game_full_display_descriptionAreaScroller" 
    android:layout_width="fill_parent" 
    android:layout_height="200dp" 
    android:scrollbars="vertical">
<TextView
    	android:id="@+id/game_full_display_description"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />
</ScrollView>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>


<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>

<ScrollView android:id="@+id/game_full_display_commentsAreaScroller" 
    android:layout_width="fill_parent" 
    android:layout_height="200dp" 
    android:scrollbars="vertical">
<TextView
    	android:id="@+id/game_full_display_comments"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:textSize="16sp"
   />
</ScrollView>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
</LinearLayout>
</ScrollView>
